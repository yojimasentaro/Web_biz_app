- if user_signed_in?
  - if @photo.like_user(current_user.id)
    = button_to photo_like_path(id: @photo.like_user(current_user), user_id: current_user, photo_id: @photo.id), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart_red.svg")
      LIKE
      %span.num
      = likes_counter(@likes)
  - else
    = button_to photo_likes_path(@photo), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span.num
      = likes_counter(@likes)
- else
  = button_to new_user_session_path, class: "btn btn-default" do
    = image_tag("icon_heart.svg")
    Like
    %span.num
      = likes_counter(@likes)
